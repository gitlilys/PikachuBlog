<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pikachu.dao.PaperDao">
	
	<insert id="save" parameterType="com.pikachu.domain.Paper">
		insert into tb_blog values(#{blog_id},#{blog_user},#{blog_content},#{blog_comment},#{blog_createtime},#{blog_enable})
	</insert>

	<resultMap id="PaperMap" type="com.pikachu.domain.Paper">
		<id column="blog_id" property="blog_id" />
		<result column="blog_user" property="blog_user" />
		<result column="blog_content" property="blog_content" />
		<result column="blog_comment" property="blog_comment" />
		<result column="blog_createtime" property="blog_createtime" />
		<result column="blog_enable" property="blog_enable" />
	</resultMap>

	<select id="findCaoGao" resultMap="PaperMap" >
		select * from tb_blog where blog_enable=0	
	</select>	
	
	<select id="findPaperById" parameterType="java.lang.String" resultType="java.lang.String">
		select blog_content from tb_blog where blog_id=#{blog_id}	
	</select>	
	
</mapper> 